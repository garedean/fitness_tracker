  gem 'byebug'
  gem 'web-console'
  gem 'spring'
  gem 'quiet_assets'
end

group :test, :development do
  gem 'rspec-rails'
  gem 'launchy'
end

group :test do
  gem 'shoulda-matchers'
  gem 'capybara', '~> 2.4.4'
  gem 'simplecov', require: false
  gem 'factory_girl_rails'
end

