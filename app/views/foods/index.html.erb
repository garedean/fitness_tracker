<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">

      <h3>Calories over time</h3>

      <%= line_chart Food.group(:created_at).sum(:calories) %>

      <h3>Add food and calories</h3>

      <div id="new-food-wrapper">
        <%= render "form" %>
      </div>

      <div id="foods-wrapper">
        <%= render "foods_table" %>
      </div>
    </div>
  </div>
</div>
